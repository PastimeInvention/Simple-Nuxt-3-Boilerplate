{
  "name": "simple-nuxt3-boilerplate",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "husky install && nuxi prepare",
    "lint": "eslint --ext \".ts,.js,.vue\" --ignore-path .gitignore .",
    "lint:quiet": "eslint --ext \".ts,.js,.vue\" --ignore-path .gitignore . --quiet",
    "lintfix": "eslint --fix --ext \".ts,.js,.vue\" --ignore-path .gitignore . --quiet"
  },
  "devDependencies": {
    "@nuxt/devtools": "^0.3.1",
    "@pinia/nuxt": "^0.4.7",
    "@unocss/core": "^0.50.6",
    "@unocss/nuxt": "^0.50.6",
    "@unocss/reset": "^0.50.6",
    "@vueuse/nuxt": "^9.13.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tailwindcss": "^3.10.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nuxt": "^3.3.2",
    "prettier": "^2.8.7",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "nuxt-headlessui": "^1.1.1",
    "nuxt-icon": "^0.3.3",
    "nuxt-seo-kit": "^1.3.5",
    "pinia": "^2.0.33"
  },
  "lint-staged": {
    "**/*.{js,ts,vue}": [
      "yarn lintfix"
    ]
  }
}
